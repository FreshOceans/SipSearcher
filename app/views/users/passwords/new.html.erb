<h1 class="header">Forgot your password?</h1>
<div class="form-wrapper">
  <div class="form-area">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
      <div class="form-div form-grp-div-md">
        <div class="input-group">
          <%= f.label :email, "Email:", class: "form-label" %><br />
          <%= f.email_field :email, class: "form-input", autofocus: true %>
        </div>
      </div>
      <div class="form-div form-grp-div-sm">
        <div class="input-group">
          <%= f.submit "Send instructions", class: "forgot-pass-btn" %>
        </div>
      </div>
      <div class="form-div form-grp-div-sm">
        <div class="input-group forgot-pass-register-option">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Need an Account?", new_registration_path(resource_name), class: "forgot-pass-option" %>
          <% end -%>
        </div>
      </div>
    <% end %>
  </div>
</div>
