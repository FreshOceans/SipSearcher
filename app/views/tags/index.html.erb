<p id="notice"><%= notice %></p>

<h1>Bar Tags</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= link_to 'New Tag', new_tag_path %>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.category_name %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
